---
interface Props{
    title:string,
    items:string[]
}
const {title, items}= Astro.props
---

<div class="card">
    <h3>{title}</h3>
    <ul>
        {
            items.map((i)=>(
                <li>
                    <i class="bi bi-envelope-at"></i>
                    <p>{i}</p>
                </li>
            ))
        }
    </ul>
</div>

<style>
    .card{
        width: 100%;
        height:auto;
        padding:20px
    }
    .card h3{
        padding-bottom: 10px;
    }
    .card li{
        padding:3px;
        display: flex;
        gap:5px
    }
</style>