---
import FooterCard from "./FooterCard.astro"
const items1=["mariano97@gmail.com","+54812912","123 Fake Street"]
const items2=["Cats","Programming","Guitars","Philosophy","Pickles"]
const items3=["Instagram","Facebook","Linkedin","Twitter","Spotify"]
---

<section class="footerTop">
    <section class="section1">
        <img src="../../../public/images/mainLogo.png" alt="logo" class="logo">
        <p>Hi, I’m Mariano, also known as Dot Dager. I’m a content creator passionate about programming, philosophy, guitars, cats, and yes, even pickles. </p>
    </section>
    <section class="section2">
        <FooterCard title="Info" items={items1}></FooterCard>
        <FooterCard title="Interest" items={items2}></FooterCard>
        <FooterCard title="Social" items={items3}></FooterCard>
    </section>
</section>

<style>
    
    .footerTop{
        border-top:1px solid gray;
        height: 400px;
        margin:20px;
        display:flex;
        align-items: center;
        justify-content: space-between;
    }
    .section1{
        min-width:200px;
        height:300px;
        border-right: 1px solid gray;
        padding:40px 20px;
        margin:20px;

    }
    .logo{
        width:230px;
        height: 70px; 
    }
    .section1 p{
        margin-top:20px
    }
    .section2{
        width:100%;
        height: 300px;
        padding:15px;
        margin:10px;
        display: flex;
        justify-content: space-evenly;
    }

    @media screen and (max-width:1080px) {
        .footerTop{
            flex-direction: column;
            height: auto;
        }
        .section1{
            text-align: center;
            border-right: none;
            margin:0;
            height: auto;
        }
        
        .section2{
            height: auto;
        }
    }
    @media screen and (max-width:720px){
        .footerTop{
            font-size: .8rem;
        }
        .section2{
            flex-wrap: wrap;
            justify-content: start;
            
        }
    }

    @media screen and (max-width:480px){

        .section2{
            flex-direction: column;
        }
        .logo{
            width:180px;
            height: 50px;
        }
    }
</style>