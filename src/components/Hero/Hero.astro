---
    import HeroInfo from "./HeroInfo.astro"
    import dotDager from '../../../public/images/dotdager.png'
    import { Image } from "astro:assets";
---
<section class="hero" id="home">
    <div class="hero-background">
        <div class="circle1"></div>
        <div class="circle2"></div>
        <Image src={dotDager} alt="dot dager" class="hero-image" format="webp"/>
        <img src="/images/dotdager.png" alt="dot-dager" class="hero-image">
        
    </div>
    
    <div class="hero-text">
        <HeroInfo></HeroInfo>
    </div>
    
</section>

<style>
    .hero{
        border-bottom:1px solid rgb(83, 82, 82);
        display: flex;
        height: 100vh;
        position: relative;
        overflow: hidden;
        margin: auto;
    }
    .hero-background{
        position:absolute;
        right: 0;
        filter:opacity(.5)
    }
    .hero-text{
        position:absolute;
        width: 600px;
        
    }
    .hero-image{
        transform:scaleX(-1);
        height: 100vh;
    }
    .circle1{
        position: absolute;
        bottom:0;
        left:-50%;
        width:250px;
        height:250px;
        border-radius: 100%;
        background: var(--primary);
        filter: blur(100px);

    }
    .circle2{
        position: absolute;
        top:0;
        left:-100%;
        width:200px;
        height:200px;
        border-radius: 100%;
        background: var(--tertiary);
        filter: blur(100px);
    }
    @media screen and (max-width:720px) {
        .hero{
            flex-direction: column;
            align-items: center;
            height: 900px
        }
        .hero-background{
            position: relative;
        }
        .hero-image{
            width:250px;
            height: 250px;
            border-radius: 100%;
            margin-top:100px
            
        }
        .circle1{
            position:absolute;
            bottom:-600px;
            left: 250px;
        }
        .circle2{
            left:-200px
        }
        .hero-text{
            position:relative;
            top:-120px;
            right: 0;
            width:80vw
        }
        
        
    }
    
</style>