---
import { FaCat, FaGuitar  } from "react-icons/fa";
import { FaComputer } from "react-icons/fa6";
import { GiPickle, GiWhiteBook } from "react-icons/gi";

interface Props{
    title:string,
    description:string,
    image:string
}
const {title,description,image}=Astro.props
---
<div class="containerCard">
    <div class="card">
        <img src={image} alt={title.toLowerCase()}>
        <div class="card__info">
            <h3>{title}</h3>
            <p>{description}</p>
        </div>
    </div>
    <div class="logo">
        {
            title=="Cats" ? <FaCat className="logo-item"></FaCat> :
            title=="Programming" ? <FaComputer className="logo-item"></FaComputer> :
            title=="Pickles" ? <GiPickle className="logo-item"></GiPickle> : 
            title=="Philosophy" ? <GiWhiteBook className="logo-item"></GiWhiteBook> :
            title=="Guitars" ? <FaGuitar className="logo-item"></FaGuitar> : null
        }
    </div>
</div>

<style>
    .containerCard{
        position:relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .card{
        width: 400px;
        height: 250px;
        border:2px solid var(--secondary);
        position:relative;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 5px;
        overflow-x: hidden;
    }
    .card img{
        width: 100%;
        height: 100%;
        border-radius: 10px;
        opacity: .3;
        transform:translateX(-100%);
        transition: all .4s;
    }
    .card__info{
        width:100%;
        height: 100%;
        position:absolute;
        top:0;
        padding: 30px 5px;

    }
    .card__info h3{
        text-align: center;
        padding:10px
    }
    .card__info p{
        padding:5px;
    }
    .card:hover img{
        transform: translateX(0);
    }  
    .logo{
        background-color: var(--bg-color);
        position: absolute;
        top:-25px;
        border-radius: 50%;
        padding:10px;
        border:2px solid var(--secondary);
    }

    .logo-item{
        display: block;
        width: 30px;
        height: 30px;
    }
    @media screen and (max-width:1080px){
        .card{
            width:340px;
            height: 210px;
        }
    }
    @media screen and (max-width:720px){
        .containerCard{
            font-size: .8rem;
        }
        .card{
            width:270px;
            height: 170px;
        }
        .card__info h3{
            padding:5px
        }
        .logo-item{
            width:20px;
            height: 20px;
        }
    }
    @media screen and (max-width:480px){
        .containerCard{
            font-size: .7rem;
        }
        .card{
            width:250px;
            height: 150px;
        }
        
    }
</style>